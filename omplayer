-- Bi·∫øn l∆∞u weld
local activeWeld = nil

-- ·∫®n/hi·ªán GUI
local open = true
toggleButton.MouseButton1Click:Connect(function()
	open = not open
	for _, obj in pairs(frame:GetChildren()) do
		if obj ~= titleBar then
			obj.Visible = open
		end
	end
	toggleButton.Text = open and "-" or "+"
end)

-- N√∫t √¥m
hugButton.MouseButton1Click:Connect(function()
	local targetName = textbox.Text
	local player = game.Players:FindFirstChild(targetName)
	local localPlayer = game.Players.LocalPlayer

	if player and player.Character and localPlayer.Character then
		local targetHRP = player.Character:FindFirstChild("HumanoidRootPart")
		local myHRP = localPlayer.Character:FindFirstChild("HumanoidRootPart")

		if targetHRP and myHRP then
			-- D·ªãch chuy·ªÉn t·ªõi ng∆∞·ªùi ch∆°i
			myHRP.CFrame = targetHRP.CFrame * CFrame.new(0, 0, 1)

			-- T·∫°o weld d√≠nh ch·∫∑t
			local weld = Instance.new("WeldConstraint")
			weld.Part0 = myHRP
			weld.Part1 = targetHRP
			weld.Parent = myHRP
			activeWeld = weld

			hugButton.Text = "üíû ƒêANG √îM " .. targetName
		else
			hugButton.Text = "‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y nh√¢n v·∫≠t!"
			wait(2)
			hugButton.Text = "ü§ó √îM NGAY"
		end
	else
		hugButton.Text = "‚ùå Kh√¥ng t√¨m th·∫•y ng∆∞·ªùi ch∆°i!"
		wait(2)
		hugButton.Text = "ü§ó √îM NGAY"
	end
end)

-- N√∫t d·ª´ng √¥m
stopButton.MouseButton1Click:Connect(function()
	if activeWeld then
		activeWeld:Destroy()
		activeWeld = nil
		hugButton.Text = "ü§ó √îM NGAY"
	end
end)
