local CoreGui = game:GetService("CoreGui")

-- N·∫øu ƒë√£ c√≥ GUI th√¨ x√≥a ƒë·ªÉ tr√°nh tr√πng
if CoreGui:FindFirstChild("HUG_GUI") then
    CoreGui:FindFirstChild("HUG_GUI"):Destroy()
end

local gui = Instance.new("ScreenGui")
gui.Name = "HUG_GUI"
gui.ResetOnSpawn = false
gui.Parent = CoreGui

-- Khung ch√≠nh
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 260, 0, 180)
frame.Position = UDim2.new(0.4, 0, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Visible = true
frame.Parent = gui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = frame

-- Thanh ti√™u ƒë·ªÅ
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 35)
titleBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
titleBar.Parent = frame

local UICornerTitle = Instance.new("UICorner")
UICornerTitle.CornerRadius = UDim.new(0, 12)
UICornerTitle.Parent = titleBar

local title = Instance.new("TextLabel")
title.Text = "üíû √îM PLAYER üíû"
title.Size = UDim2.new(0.85, 0, 1, 0)
title.Position = UDim2.new(0, 5, 0, 0)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 182, 193)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = titleBar

-- N√∫t ƒë√≥ng GUI
local toggleButton = Instance.new("TextButton")
toggleButton.Text = "-"
toggleButton.Size = UDim2.new(0.15, 0, 1, 0)
toggleButton.Position = UDim2.new(0.85, 0, 0, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 24
toggleButton.Parent = titleBar

local UICornerToggle = Instance.new("UICorner")
UICornerToggle.CornerRadius = UDim.new(1, 0)
UICornerToggle.Parent = toggleButton

-- √î nh·∫≠p t√™n ng∆∞·ªùi ch∆°i
local textbox = Instance.new("TextBox")
textbox.PlaceholderText = "Nh·∫≠p t√™n ng∆∞·ªùi mu·ªën √¥m..."
textbox.Size = UDim2.new(0.9, 0, 0, 35)
textbox.Position = UDim2.new(0.05, 0, 0.35, 0)
textbox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
textbox.TextColor3 = Color3.fromRGB(255, 255, 255)
textbox.TextScaled = true
textbox.Font = Enum.Font.Gotham
textbox.Parent = frame
local UICornerBox = Instance.new("UICorner")
UICornerBox.CornerRadius = UDim.new(0, 8)
UICornerBox.Parent = textbox

-- N√∫t √îM
local hugButton = Instance.new("TextButton")
hugButton.Text = "ü§ó √îM NGAY"
hugButton.Size = UDim2.new(0.9, 0, 0, 35)
hugButton.Position = UDim2.new(0.05, 0, 0.62, 0)
hugButton.BackgroundColor3 = Color3.fromRGB(255, 105, 180)
hugButton.TextColor3 = Color3.fromRGB(255, 255, 255)
hugButton.TextScaled = true
hugButton.Font = Enum.Font.GothamBold
hugButton.Parent = frame
local UICornerBtn = Instance.new("UICorner")
UICornerBtn.CornerRadius = UDim.new(0, 8)
UICornerBtn.Parent = hugButton

-- N√∫t D·ª™NG √îM
local stopButton = Instance.new("TextButton")
stopButton.Text = "üõë D·ª™NG √îM"
stopButton.Size = UDim2.new(0.9, 0, 0, 35)
stopButton.Position = UDim2.new(0.05, 0, 0.82, 0)
stopButton.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
stopButton.TextColor3 = Color3.fromRGB(255, 255, 255)
stopButton.TextScaled = true
stopButton.Font = Enum.Font.GothamBold
stopButton.Parent = frame
local UICornerStop = Instance.new("UICorner")
UICornerStop.CornerRadius = UDim.new(0, 8)
UICornerStop.Parent = stopButton

-- Bi·∫øn weld ƒë·ªÉ h·ªßy khi d·ª´ng
local activeWeld = nil

-- N√∫t ·∫©n/hi·ªán GUI
toggleButton.MouseButton1Click:Connect(function()
	if frame.Visible then
		frame.Visible = false
		-- T·∫°o n√∫t "+" ·ªü gi·ªØa m√†n h√¨nh ƒë·ªÉ m·ªü l·∫°i
		local reopen = Instance.new("TextButton")
		reopen.Name = "ReopenBtn"
		reopen.Text = "+"
		reopen.Size = UDim2.new(0, 40, 0, 40)
		reopen.Position = UDim2.new(0.5, -20, 0.5, -20)
		reopen.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
		reopen.TextColor3 = Color3.fromRGB(255, 255, 255)
		reopen.Font = Enum.Font.GothamBold
		reopen.TextSize = 30
		reopen.Draggable = true
		reopen.Active = true
		reopen.Parent = gui

		local UICornerReopen = Instance.new("UICorner")
		UICornerReopen.CornerRadius = UDim.new(1, 0)
		UICornerReopen.Parent = reopen

		reopen.MouseButton1Click:Connect(function()
			frame.Visible = true
			reopen:Destroy()
		end)
	end
end)

-- √îm ng∆∞·ªùi ch∆°i
hugButton.MouseButton1Click:Connect(function()
	local targetName = textbox.Text
	local player = game.Players:FindFirstChild(targetName)
	local localPlayer = game.Players.LocalPlayer

	if player and player.Character and localPlayer.Character then
		local targetHRP = player.Character:FindFirstChild("HumanoidRootPart")
		local myHRP = localPlayer.Character:FindFirstChild("HumanoidRootPart")

		if targetHRP and myHRP then
			myHRP.CFrame = targetHRP.CFrame * CFrame.new(0, 0, 1)

			local weld = Instance.new("WeldConstraint")
			weld.Part0 = myHRP
			weld.Part1 = targetHRP
			weld.Parent = myHRP
			activeWeld = weld

			hugButton.Text = "üíû ƒêANG √îM " .. targetName
		else
			hugButton.Text = "‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y nh√¢n v·∫≠t!"
			wait(2)
			hugButton.Text = "ü§ó √îM NGAY"
		end
	else
		hugButton.Text = "‚ùå Kh√¥ng t√¨m th·∫•y ng∆∞·ªùi ch∆°i!"
		wait(2)
		hugButton.Text = "ü§ó √îM NGAY"
	end
end)

-- D·ª´ng √¥m
stopButton.MouseButton1Click:Connect(function()
	if activeWeld then
		activeWeld:Destroy()
		activeWeld = nil
		hugButton.Text = "ü§ó √îM NGAY"
	end
end)title.BackgroundTransparency = 1
